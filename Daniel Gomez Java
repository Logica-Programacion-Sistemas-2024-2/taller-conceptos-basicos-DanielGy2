    // Diseñe un algoritmo para saludar al usuario: Hola usuario. El nombre del usuario es ingresado por teclado
    public static String saludar_Usuario(String nombreUsuario) {
        try {
            if (nombreUsuario == null || nombreUsuario.isEmpty()) {
                return "Error: Por favor ingrese un nombre que sea valido.";
            }
            return "Hola, " + nombreUsuario;

        } catch (Exception ex) {
            return "Error: " + ex.getMessage();
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingrese su nombre: ");
        String nombreUsuario = scanner.nextLine();
        System.out.println(saludar_Usuario(nombreUsuario));
        scanner.close();
    }

    // Diseñe un algoritmo que lea por teclado una velocidad en Km/seg y la convierta a metros/seg y a metros/hora
    // retorne el valor en formato string (metrosPorSeg + "|" + metrosPorHora)
    public static String convertir_Velocidad(double kilometrosPorSegundo) {
        try {
            double metrosPorSeg = kilometrosPorSegundo * 1000;
            double metrosPorHora = metrosPorSeg * 3600;
            return String.format("%.2f|%.2f", metrosPorSeg, metrosPorHora);
        } catch (Exception ex) {
            return "0|0";
        }
    }

    public static void main_Convertir_Velocidad(String[] args) {
        double kilometrosPorSegundo = 2; 
        String resultado = convertir_Velocidad(kilometrosPorSegundo);
        System.out.println(resultado);
    }

